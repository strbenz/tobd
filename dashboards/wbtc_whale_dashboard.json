{
  "title": "WBTC Whale Monitor",
  "schemaVersion": 38,
  "version": 1,
  "timezone": "browser",
  "tags": ["wbtc", "whale"],
  "panels": [
    {
      "type": "stat",
      "title": "Whale TX Count (today)",
      "datasource": "PostgreSQL",
      "targets": [
        {
          "format": "table",
          "rawSql": "SELECT whale_tx_count FROM analytics.daily_stats WHERE date = current_date",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Max TX Volume (today, WBTC)",
      "datasource": "PostgreSQL",
      "targets": [
        {
          "format": "table",
          "rawSql": "SELECT max_tx_volume FROM analytics.daily_stats WHERE date = current_date",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 }
    },
    {
      "type": "stat",
      "title": "Top Sender (today)",
      "datasource": "PostgreSQL",
      "targets": [
        {
          "format": "table",
          "rawSql": "SELECT COALESCE(top_sender, 'â€”') FROM analytics.daily_stats WHERE date = current_date",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Daily Whale TX Count",
      "datasource": "PostgreSQL",
      "targets": [
        {
          "format": "time_series",
          "rawSql": "SELECT date AS time, whale_tx_count AS value FROM analytics.daily_stats ORDER BY date",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 }
    },
    {
      "type": "timeseries",
      "title": "Daily Total Volume (WBTC)",
      "datasource": "PostgreSQL",
      "targets": [
        {
          "format": "time_series",
          "rawSql": "SELECT date AS time, total_volume_wbtc AS value FROM analytics.daily_stats ORDER BY date",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 }
    }
  ],
  "templating": { "list": [] },
  "time": { "from": "now-30d", "to": "now" },
  "refresh": "30s"
}
